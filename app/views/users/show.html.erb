<% cache @user do %>
    <h1><%= @user.email_address %></h1>
    <%= @user.description %>
<% end %>

<%= link_to "Back", users_path %>
<% if authenticated? %>
    <%= link_to "Edit", edit_user_path(@user) %>
    <%= button_to "Delete", @user, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
<% end %>