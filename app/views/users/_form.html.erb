<%= form_with model: user do |form| %>
  <div>
    <%= form.label :email_address %>
    <%= form.text_field :email_address %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.rich_text_area :description %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
